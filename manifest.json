{
  "manifest_version": 3,
  "name": "ErgoAssist",
  "description": "This extension reminds you to check your posture and perform stretch exercises at regular intervals.",
  "version": "1.0",
  "icons": {
    "16": "logo/logo-16.png",
    "48": "logo/logo-48.png",
    "128": "logo/logo-128.png"
  },
  "permissions": ["alarms", "storage", "notifications"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "logo/logo-16.png",
      "48": "logo/logo-48.png",
      "128": "logo/logo-128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
